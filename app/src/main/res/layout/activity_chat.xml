<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".chatActivity">

    <LinearLayout
        android:id="@+id/chat"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/back"

        android:orientation="vertical"
        android:layout_marginStart="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat With our AI"
            android:textColor="#ffffff"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:textStyle="bold"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/t1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:background="@drawable/back"
        android:gravity="center"
        android:text="Hi "
        android:textColor="#FBF9F9"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="96dp"
        android:background="@drawable/back"
        android:gravity="center"
        android:text="Hello how can i help you "
        android:textColor="#FBF9F9"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:padding="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="168dp"
        android:background="@drawable/back"
        android:gravity="center"
        android:text="i want to go biggest planet of our solar system "
        android:textColor="#FBF9F9"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="276dp"
        android:background="@drawable/back"
        android:gravity="center"
        android:padding="4dp"
        android:text="Great ! jupiter is the biggest planet in our solar system.would you like  to  go jupiter "
        android:textColor="#FBF9F9"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.832"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t5"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="376dp"
        android:background="@drawable/back"
        android:gravity="center"
        android:padding="4dp"
        android:text="Yes i love that "
        android:textColor="#FBF9F9"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>